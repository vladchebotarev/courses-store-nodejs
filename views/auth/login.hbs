<div class="auth">
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a class="active" href="#login">Login</a></li>
        <li class="tab col s6"><a href="#register">Register</a></li>
      </ul>
    </div>
    <div id="login" class="col s6 offset-s3">

      {{#if loginError}}
        <p class="alert">{{loginError}}</p>
      {{/if}}

      <h3>Sign in to Store</h3>
      <form action="/auth/login" method="POST">
        <div class="input-field">
          <input type="email" class="validate" id="email" name="email" required>
          <label for="email">Email</label>
          <span class="helper-text" data-error="Please enter email!"></span>
        </div>

        <div class="input-field">
          <input type="password" class="validate" id="password" name="password" required>
          <label for="password">Password</label>
          <span class="helper-text" data-error="Please enter password!"></span>
        </div>

        <input type="hidden" name="_csrf" value="{{csrf}}">

        <button class="btn btn-primary">Login</button>
      </form>
    </div>
    <div id="register" class="col s6 offset-s3">
      <h3>Create an Account</h3>

      {{#if registerError}}
        <p class="alert">{{registerError}}</p>
      {{/if}}

      <form action="/auth/register" method="POST">
        <div class="input-field">
          <input type="text" class="validate" id="name" name="name" required>
          <label for="name">Name</label>
          <span class="helper-text" data-error="Please enter name!"></span>
        </div>

        <div class="input-field">
          <input type="email" class="validate" id="remail" name="email" required>
          <label for="remail">Email</label>
          <span class="helper-text" data-error="Please enter email!"></span>
        </div>

        <div class="input-field">
          <input type="password" class="validate" id="rpassword" name="password" required>
          <label for="rpassword">Password</label>
          <span class="helper-text" data-error="Please enter password!"></span>
        </div>

        <div class="input-field">
          <input type="password" class="validate" id="confirm" name="confirm" required>
          <label for="confirm">Confirm Password</label>
          <span class="helper-text" data-error="Please confirm the password!"></span>
        </div>

        <input type="hidden" name="_csrf" value="{{csrf}}">

        <button class="btn btn-primary">Register</button>
      </form>
    </div>
  </div>
</div>