<div class="auth">
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a class="active" href="">Login</a></li>
        <li class="tab col s6"><a target="_self" href="/auth/register">Register</a></li>
      </ul>
    </div>
    <div id="login" class="col s6 offset-s3">

      {{#if error}}
        <p class="alert alert-danger">{{error}}</p>
      {{/if}}

      {{#if success}}
        <p class="alert alert-success">{{success}}</p>
      {{/if}}

      <h3>Sign in to Store</h3>
      <form action="/auth/login" method="POST">
        <div class="input-field">
          <input type="email" class="validate" id="email" name="email" required>
          <label for="email">Email</label>
          <span class="helper-text" data-error="Please enter email!"></span>
        </div>

        <div class="input-field">
          <input type="password" class="validate" id="password" name="password" required>
          <label for="password">Password</label>
          <span class="helper-text" data-error="Please enter password!"></span>
        </div>

        <input type="hidden" name="_csrf" value="{{csrf}}">

        <p><a href="/auth/reset">Forgot Password?</a></p>
        <button class="btn btn-primary">Login</button>
      </form>
    </div>
  </div>
</div>