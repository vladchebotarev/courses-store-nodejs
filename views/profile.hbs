<h1>Profile</h1>

<div class="row">
  <div class="col s6">
    {{#if user.avatarUrl}}
      <img
        class="avatar"
        src="/{{user.avatarUrl}}"
        alt="avatar-{{user.name}}">
    {{else}}
      <p>No Image</p>
    {{/if}}
  </div>

  <div class="col s6">
    <form action="/profile" method="POST" enctype="multipart/form-data">
      <p>Email: <strong>{{user.email}}</strong></p>

      <div class="input-field">
        <input type="text" class="validate" id="name" name="name" value="{{user.name}}" required>
        <label for="title">Name</label>
        <span class="helper-text" data-error="Name can not be empty!"></span>
      </div>

      <div class="file-field input-field">
        <div class="btn">
          <span>Profile Image</span>
          <input type="file" name="avatar">
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text">
        </div>

        <input type="hidden" name="_csrf" value="{{csrf}}">

        <button type="submit" class="btn btn-submit-profile">Submit</button>
      </div>
    </form>
  </div>
</div>